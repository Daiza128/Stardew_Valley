<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.stardewvalley.controller.AchievementController">
    <!-- Fondo del contenedor principal -->
    <AnchorPane style="-fx-background-color: #d0a16d;" prefHeight="760.0" prefWidth="1040.0">

        <!-- Imagen de fondo -->
        <ImageView fx:id="achievementBackground" fitWidth="1040" fitHeight="760" layoutX="0" layoutY="0" preserveRatio="true" style="-fx-opacity: 0.6;"/>

        <!-- Marco para contener los elementos -->
        <AnchorPane layoutX="170" layoutY="100" prefWidth="700" prefHeight="550"
                    style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-border-color: #8c6239; -fx-border-width: 5; -fx-border-radius: 10; -fx-background-radius: 10;">

            <!-- Título decorativo -->
            <Label text="Achievements" layoutX="210" layoutY="20"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #8c6239; -fx-font-family: 'Verdana';"/>

            <!-- ListView para logros -->
            <ListView fx:id="achievementList" layoutX="50" layoutY="80" prefHeight="400" prefWidth="600"
                      style="-fx-background-color: #f7e6d4; -fx-border-color: #8c6239; -fx-border-width: 3;"/>

            <!-- Botón para regresar -->
            <Button text="Back to Game" layoutX="250" layoutY="500" prefWidth="200"
                    onAction="#backToGame"
                    style="-fx-background-color: #8c6239; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 15;"/>
        </AnchorPane>
    </AnchorPane>
</AnchorPane>