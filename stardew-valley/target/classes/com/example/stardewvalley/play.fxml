<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>

<Pane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="com.example.stardewvalley.controller.PlayController">
    <!-- Lienzo para el juego -->
    <Canvas fx:id="board" height="760" onKeyPressed="#onKeyPressed" onKeyReleased="#onKeyReleased" width="1040" />

    <!-- Botón Home -->
    <Button fx:id="btnHome" layoutX="933.0" layoutY="686.0" prefHeight="30.0" prefWidth="80.0" text="Home"
            style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-text-fill: white; -fx-border-color: white;
                   -fx-border-width: 2; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 10;
                   -fx-border-radius: 10;"/>

    <!-- Botón Achievement -->
    <Button fx:id="btnAchievement" layoutX="933.0" layoutY="724.0" prefHeight="30.0" prefWidth="80.0" text="Achievements"
            style="-fx-background-color: rgba(0, 0, 0, 0.5); -fx-text-fill: white; -fx-border-color: white;
                   -fx-border-width: 2; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 10;
                   -fx-border-radius: 10;"/>
</Pane>